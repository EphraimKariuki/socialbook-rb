<h1>All users</h1>

<% if @users.any? %>
    <div class="users"> 
        <% @users.each do |user| %>
            <div class="user">
                <p><strong>Name:</strong> <%= user.name %></p>
                <p><strong>Email:</strong> <%= user.email %></p>
                
                <%= button_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure?" } %>
                <%= link_to "View", user_path(user) %>
            </div>
        <% end %>
    </div>